      }

      table.lineup-table th {
        background: #f5f6fb;
        font-weight: 700;
      }

      .maker-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 6px;
      }

      .maker-header img {
        width: 80px;
        height: 80px;
        object-fit: contain;
        border-radius: 10px;
        background: #fff;
        border: 1px solid var(--border);
